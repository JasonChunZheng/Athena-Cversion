#    @WARNING1@
#    @WARNING2@
#===============================================================================
# FILE: Makefile.in
#
# PURPOSE: Template for radiation/Makefile.  When 'configure' is run, a new
# Makefile will be created (overwriting the last) from this template.
#
#-------------------  object files  --------------------------------------------
CORE_OBJ = init_fullradiation.o\
	   hydro_to_fullrad.o\
           utils_fullrad.o\
	   bvals_fullrad.o\
	   fullRT_2d.o\
	   fullRT_3d.o\
	   output_spec.o\
	   FullRT_flux.o \
	   output_intensity_vtk.o \
	   dump_intensity_vtk.o 
OBJ = $(CORE_OBJ)

#-------------------  macro definitions  ---------------------------------------

SRC = $(OBJ:.o=.c)

include ../../Makeoptions

BLOCKINC =
BLOCKLIB =

#--------------------  implicit rules  -----------------------------------------

.c.o:
	${CC} ${CFLAGS} -c $<

#---------------------  targets  -----------------------------------------------

all:	compile

.PHONY: compile
compile: ${OBJ}

help:
	@echo This is the /src/fullradiation Makefile
	@echo Type 'make compile' to generate rsolvers object files
	@echo Type 'make clean'   to remove '*.o' files
	@echo OBJ=$(OBJ)

.PHONY: clean
clean:
	rm -f *.o *.a Makedepend *~

depend: Makedepend

Makedepend:
	${CC} -MM ${CFLAGS} ${SRC} > Makedepend

# this forces a rebuild of all objects, if code re-configure'd
include Makedepend
